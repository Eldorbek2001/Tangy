@page "/demoproducts"


<div class="container" style="background-color:cyan; padding: 30px;">
<h2 class="text-success">DemoProduct</h2> 
<p>Favourites:  @favNumber</p><br>
<p>Last Selected Product: @lastProduct</p>
<div class="row">
    @foreach(Class1 eachProduct in productsList)
    {   <_ProductInfo product= "@eachProduct" OnchangefavNumber="changefavNumber" OnLastProdUpdate="lastProd">
        <fragOne>#1</fragOne>
        <fragTwo>#2</fragTwo>
        </_ProductInfo>
        
    }
 </div>
 </div>
@code {
    private string lastProduct = "";
    private int favNumber = 0;


    List<Class1> productsList = new();

    protected override void OnInitialized()
    {
        productsList.Add(new()
            {
                Id = 1,
                Name = "Midnight Blaze",
                isActive = false,
                price = 2.71,
                ProductProperties = new()
                {
                new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Rose"},
                new Demo_ProductProp { Id = 2, Key = "Size", Value = "20oz"},
                new Demo_ProductProp { Id = 3, Key = "Color", Value="Purple" }
                }
            });

        productsList.Add(new()
            {
                Id = 2,
                Name = "Blossom Lily",
                isActive = true,
                price = 3.14,
                ProductProperties = new()
            {
                new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Lily",},
                new Demo_ProductProp { Id = 2, Key = "Size", Value = "18oz" },
                new Demo_ProductProp {Id = 3,Key = "Color",Value = "White"}
            }
            });


    }
    protected void changefavNumber( bool isSelected)
    {
        if (isSelected)
        {
            favNumber++;
        }
        else
        {
            favNumber--;
        }
    }

    protected void lastProd(string lastClickedName)
    {
        lastProduct = lastClickedName ;
    }

}
